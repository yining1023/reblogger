{
  "name": "Reblogger",
  "author": "Yining Shi <yining@nyu.edu>",
  "version": "1.0.0",
  "description": "App to receive submissions from students and reblog them",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint \"./**/*.js\"",
    "lint": "npm run lint",
    "start:dev": "nodemon --watch views --watch src --watch public -e js,pug,html,css server.js",
    "start:dep": "ENV=deployment node server.js",
    "start": "npm run start:dev",
    "test": "mocha --compilers js:babel-core/register",
    "todo": "leasot ./src/**/*.js server.js --tags error,info || true"
  },
  "dependencies": {
    "body-parser": "^1.16.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "express-session": "^1.15.0",
    "gulp-messenger": "0.25.3",
    "lodash": "^4.17.4",
    "pug": "^2.0.0-beta11",
    "tumblr.js": "^1.1.1"
  },
  "engines": {
    "node": "6.3.0"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "ignore": [
      "node_modules"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "6.18.2",
    "babel-preset-es2015": "6.18.0",
    "chai": "3.5.0",
    "eslint": "3.10.2",
    "leasot": "4.2.0",
    "mocha": "3.1.2",
    "nodemon": "1.11.0",
    "todo-webpack-plugin": "1.5.1"
  },
  "directories": {
    "test": "test"
  },
  "reveal": true
}
